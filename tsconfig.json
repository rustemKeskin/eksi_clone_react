{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./server",
    "outDir": "./build",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["ES6", "DOM"],
    "types": ["node"],
    // "allowJs": true
  },
  "include": [
    "server/**/*.ts",
    "server/**/*.js",
    "server/views/**/*.pug"
  ],
  "exclude": ["node_modules","./build"]
}
